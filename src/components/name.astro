---
const base:string = String(import.meta.env.BASE_URL);
/*const audiourl:string = "".concat("playAudio(", "\"", base, "MohitsName.m4a", "\"", ");");*/
const audiourl:string = base.concat("MohitsName.m4a");
---

<div class="mb-4">
<h1 class="font-bold max-[1180px]:block min-[1180px]:inline-block leading-none max-md:text-4xl md:text-[4rem] align-bottom">Mohit Tawarmalani</h1>
<span class="pronounce cursor-pointer min-[1180px]:inline-block lg:w-min-[1180px]:pl-5 [1180px]:p-1">
<img width=30 height=30 class="inline" src=`${base}hearicon.png` alt="hear"> (pronounce)
</span>
</div>
<script is:inline define:vars = {{ audiourl }}>
 const y = document.getElementsByClassName('pronounce');
 Array.from(y).forEach(el => {el.addEventListener("click", function() {
     new Audio(audiourl).play();
 })});
</script>


