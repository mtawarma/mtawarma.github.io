---
import CVcomp from '../components/CVcomp.astro'
import SearchField from "../components/SearchField.astro";
---

<CVcomp title="Mohit Tawarmalani: Search"
 description="Mohit Tawarmalani: Search"
 pagetype="search"
> 
<div class="myinclude">
<h2>Search</h2>
<SearchField id="search" className="pagefind-ui" uiOptions={{ showImages: false }} />
</div>
</CVcomp>

<style lang="scss">
@use "../styles/cvstyle.scss"
</style>

<style is:global>
  nav {
    display: grid;
    place-items: center;
  }

  .pagefind-ui {
    /*--pagefind-ui-scale: 0.75;*/
    --pagefind-ui-primary: oklch(var(--a));
    --pagefind-ui-text: var(--base-content);
    --pagefind-ui-border: oklch(var(--a));
    --pagefind-ui-border-width: 1px;
    --pagefind-ui-border-radius: 0.25rem;
    --pagefind-ui-font: "Noto Sans", system-ui;

    width: 90%;
  }

  .pagefind-ui.yellow {
    --pagefind-ui-background: lightyellow;
  }

  .pagefind-ui.red {
    --pagefind-ui-background: peachpuff;
    width: 100%;
  }

  .pagefind-ui .pagefind-ui__drawer:not(.pagefind-ui__hidden) {
    /*position: absolute;*/
    left: 0;
    right: 0;
    margin-top: 0px;
    z-index: 1;
    padding: 0 2em 1em;
    overflow-y: auto;
    /*box-shadow:
      0 10px 10px -5px rgba(0, 0, 0, 0.2),
      0 2px 2px 0 rgba(0, 0, 0, 0.1);*/
    box-shadow: none;
    border-bottom-right-radius: var(--pagefind-ui-border-radius);
    border-bottom-left-radius: var(--pagefind-ui-border-radius);
    background-color: var(--primary);
  }

  #search .pagefind-ui .pagefind-ui__result-link {
    @apply text-accent;
  }

  #search .pagefind-ui .pagefind-ui__result-title {
    color: oklch(var(--a));
    font-size: 2rem;
    font-weight: 600;
  }

  #search .pagefind-ui .pagefind-ui__result-excerpt {
    color: var(--pagefind-ui-text);
    font-size: 1.5rem;
    font-weight: 400;
  }

  .myinclude #search p {
     @apply mb-4;
  }

  #search .pagefind-ui__button {
    @apply text-2xl;
    padding: 10px 24px;
    margin-top: 10px;
    height: auto;
    @apply bg-neutral;
    @apply text-neutral-content;
  }

  #search .pagefind-ui__message {
    font-size: 1.5rem;
    font-weight: 700;
    height: auto;
  }

  #search .pagefind-ui__search-input {
    @apply text-2xl;
    height: auto;
    @apply p-3;
    /*@apply border-primary focus-visible:border-primary;*/
  }

  #search .pagefind-ui__search-clear {
    @apply mr-2;
    @apply text-xl;
    height: auto;
    @apply p-4;
    @apply bg-opacity-100;
    @apply text-accent;
  }

</style>
